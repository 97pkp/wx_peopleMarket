/* pages/coupon /coupon.wxss */

page {
  background: #fff;
}

.coupon {
  margin-bottom: 100rpx;
  border-top: 2rpx solid #eee;
}

/* 优惠券样式 */

.coupon-item {
  display: flex;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 670rpx;
  height: 200rpx;
  flex-wrap: wrap;
}

.coupon-item image {
  width: 100%;
  height: 100%;
}

.coupon-item .info {
  width: 100%;
  height: 100%;
  margin-top: -200rpx;
  display: flex;
  flex-wrap: wrap;
}

.coupon-item .info .num {
  width: 200rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 84rpx;
  font-family: 'DINCondensed-Bold';
  color: #fff;
  padding-bottom: 50rpx;
}

.coupon-item .info .num text:first-child {
  display: flex;
  margin-left: 5rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
}

.coupon-item .info .explain {
  width: 414rpx;
  height: 100%;
  padding-left: 36rpx;
  display: flex;
  flex-direction: column;
}

.coupon-item .info .explain .top {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  justify-content: space-between;
  margin-bottom: 42rpx;
}

.coupon-item .info .explain .top>view {
  display: flex;
  justify-content: space-around;
  font-family: PingFang-SC-Medium;
  font-size: 15px;
  color: #333;
}

.coupon-item .info .explain .top>text {
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #20a0ff;
}

.coupon-item .info .explain .bottom {
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #8d91a2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.coupon-item .info .explain .bottom>view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
